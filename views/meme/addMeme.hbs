<div id="create-meme">
    <form action="#/meme/add" method="post">
        <div class="container">
            <h1>Create Meme</h1>
            <p>Please fill in this form to create an meme.</p>

            <p>Title</p>
            <input type="text" placeholder="Enter Title" name="title">
            <p class="text-danger validation-massage" id="validate-title"></p>

            <p>Description</p>
            <input type="text" placeholder="Enter Description" name="description">
            <p class="text-danger validation-massage" id="validate-description"></p>

            <p>Meme Image</p>
            <input type="text" placeholder="Enter meme ImageUrl" name="imageUrl">
            <p class="text-danger validation-massage" id="validate-imageUrl"></p>

            <button type="submit" class="registerbtn">Create Meme</button>
        </div>
    </form>
</div>

<script>
    $(()=>{ validateForm.item('#create-meme > form')});
</script>