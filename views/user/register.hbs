<div id="register">
    <form action="#/register" method="post">
        <div class="container">
            <h1>Register</h1>
            <p id="details">Please fill in this form to create an account.</p>
            <hr id="login-register-hr">

            <p id="username">Username</p>
            <input type="text" placeholder="Enter Username" name="username">
            <p class="text-danger validation-massage" id="validate-username"></p>
            
            <p>Password</p>
            <input type="password" placeholder="Enter Password" name="password">
             <p class="text-danger validation-massage" id="validate-password"></p>

            <p>Repeat Password</p>
            <input type="password" placeholder="Repeat Password" name="repeatPass">
            <p class="text-danger validation-massage" id="validate-repeatPass"></p>

            <p>Email</p>
            <input type="email" placeholder="Enter Email" name="email">
            <p class="text-danger validation-massage" id="validate-email"></p>

            <p>Avatar Url</p>
            <input type="text" placeholder="Enter AvatarUrl" name="avatarUrl">
            <p class="text-danger validation-massage" id="validate-avatarUrl"></p>
            <hr>

            <button type="submit" class="registerbtn">Register</button>
        </div>
        <div class="container signin">
            <p>Already have an account?
                <a href="#/login">Sign in</a>.</p>
        </div>
    </form>
</div>
<script>
    $(()=>{ validateForm.register('#register > form')});
</script>